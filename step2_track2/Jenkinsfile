pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = 'dockerhub-credentials'
        DOCKER_REGISTRY = 'localhost:5000'
        IMAGE_NAME = 'flask-app-example'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Set Docker Image Tag') {
            steps {
                script {
                    def branch = env.GIT_BRANCH ?: 'main'
                    def sha = env.GIT_COMMIT?.take(7) ?: 'unknown'
                    def tag = 'latest'

                    if (branch == 'main') {
                        tag = 'latest'
                    } else if (branch == 'develop') {
                        tag = "develop-${sha}"
                    } else if (env.GIT_TAG) {
                        tag = env.GIT_TAG
                    }
                    
                    env.IMAGE_TAG = tag
                    env.FULL_IMAGE_NAME = "${DOCKER_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh "sudo docker build -t ${FULL_IMAGE_NAME} ."
                }
            }
        }
        stage('Docker Push') {
            steps {
                script {
                    if (env.DOCKERHUB_CREDENTIALS) {
                        docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                            sh "sudo docker push ${FULL_IMAGE_NAME}"
                        }
                    } else {
                        sh "sudo docker push ${FULL_IMAGE_NAME}"
                    }
                }
            }
        }
    }
    post {
        always {
            sh 'sudo docker rmi ${FULL_IMAGE_NAME} || true'
        }
    }
}
