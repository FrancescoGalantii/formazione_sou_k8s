pipeline {
    agent any

    environment {
        GIT_REPO_URL = "https://github.com/FrancescoGalantii/formazione_sou.git"
        GIT_BRANCH = "main"
        CHART_NAME = "flask-app" 
        RELEASE_NAME = "flask-app-example"
        NAMESPACE = "formazione-sou"
    }

    stages {
        stage('Clonare repository') {
            steps {
                git branch: "${GIT_BRANCH}", url: "${GIT_REPO_URL}"  
            }
        }

        stage('Installazione Helm') {
            steps {
                echo 'Installazione della Helm Chart...'
                   sh '''
                       export KUBECONFIG=/var/jenkins_home/.kube/config
                       helm upgrade --install flask-app-example charts --namespace ${NAMESPACE} --set image.tag=latest --set ingress.host=formazionesou.local

                   '''
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}

