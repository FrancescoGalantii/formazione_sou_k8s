pipeline {
    agent any

    environment {
        GIT_REPO_URL = "git@github.com:FrancescoGalantii/formazione_sou_k8s.git"
        GIT_BRANCH = "main"
        CHART_PATH = "formazione_sou/charts"
        RELEASE_NAME = "formazione-sou-release" 
        NAMESPACE = "formazione_sou"
    }

    stages {
        stage('Clonare repository') {
            steps {
                try {
                    git branch: "${GIT_BRANCH}", url: "${GIT_REPO_URL}"
                } catch (Exception e) {
                    error "cloning repo failed: ${e.message}"
            }
        }

        stage('Configurazione Helm') {
            steps {
                script {
                    try {
                        sh '''
                            kubectl get namespace ${NAMESPACE} || kubectl create namespace ${NAMESPACE}
                        '''
                    } catch (Exception e) {
                        error "configuring helm failed :${e.message}"
                }
            }
        }

        stage('Installazione Helm') {
            steps {
                try {
                    sh '''
                        helm upgrade --install ${RELEASE_NAME} ./ --namespace ${NAMESPACE}
                    '''
                } catch (Exception e) {
                    error "helm install failed :${e.message}"
            }
        }
    }
post {
        always {
            cleanWs()
        }
    }
}
